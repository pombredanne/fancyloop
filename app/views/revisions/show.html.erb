<% provide(:title, full_title(@revision)) %>
<div class="row">
  <h2>
    <%= link_to @revision.project.title, @revision.project %>
  </h2>
  <h3>
    Version <%= get_version(@revision) %>
    <% if not @revision.caption.nil? and not @revision.caption.empty? %>
      | <%= @revision.caption %>
    <% end %>
  </h3>
  <div class="span12 center">
    <%= render @revision %>
  </div>
</div>
